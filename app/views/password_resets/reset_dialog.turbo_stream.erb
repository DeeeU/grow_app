<turbo-stream action="replace" target="password_reset_frame">
  <template>
    <div class="bg-white rounded-lg shadow-xl overflow-hidden max-w-md w-full">
      <div class="bg-gray-100 px-4 py-2 flex justify-between items-center">
        <h3 class="text-lg font-medium text-gray-900">パスワード再設定</h3>
        <button type="button" data-action="turbo-modal#closeModal" class="text-gray-500 hover:text-gray-700">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="p-6">
        <%= form_with(url: password_resets_path, method: :post, data: { turbo: false }) do |form| %>
          <div class="mb-4">
            <p class="mb-4 text-gray-700">登録されているメールアドレスを入力すると、パスワード再設定用のリンクを送信します。</p>

            <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
            <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>

          <div class="flex justify-end">
            <button type="button" data-action="turbo-modal#closeModal" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-2 px-4 rounded mr-2">
              キャンセル
            </button>
            <%= form.submit "再設定メールを送信", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </template>
</turbo-stream>
