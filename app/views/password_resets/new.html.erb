<div class="mx-auto md:w-2/3 w-full">
  <h1 class="text-4xl font-bold text-center mb-8">パスワード再設定</h1>

  <%= form_with(url: password_resets_path, method: :post, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
    <div class="mb-4">
      <p class="mb-4 text-gray-700">登録されているメールアドレスを入力すると、パスワード再設定用のリンクを送信します。</p>
      
      <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "再設定用メールを送信", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
      <%= link_to "ログイン画面へ", login_path, class: "inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800" %>
    </div>
  <% end %>
</div>
